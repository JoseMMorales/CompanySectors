{% extends 'base.html.twig' %}

{% block title %}Company App{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}
    <div class='container'>
        <h1 class='text-center mb-3'>Companies Table</h1>
        <p><b>Results:</b>  {{ numberCompanies }}</p>
        <div class="d-flex flex-direction-row justify-content-between mb-2">
            <div class="input-group">
                <div class="input-group-prepend me-2">
                    <button class="btn btn-outline-secondary border-radious-none" type="button">Clean</button>
                    <button class="btn btn-outline-secondary border-radious-none" type="button">Filter</button>
                </div>
                <select class="form-select" aria-label="Default select example w-50">
                    <option selected>Sector</option>
                    <option value="1">Electric</option>
                    <option value="2">Grocery</option>
                    <option value="3">Toys</option>
                    <option value="4">Water</option>
                </select>
                <input type="text" class="form-control border-radious-none w-75" placeholder="Company Name...">
            </div>
        </div>
        
        <div class="table-responsive">
            <table class='table table-striped table-bordered'>
                <thead>
                    <tr class='text-center'>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Sector</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr class='text-center'>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.phone }}</td>
                        <td>{{ company.email }}</td>
                        <td>{{ company.sector }}</td>
                        <td>
                            <button class='btn btn btn-outline-primary'>
                                <a class='company-button-anchor' href='{{ path('company_edit', {'id': company.id}) }}'>Edit</a>
                            </button>
                        </td>
                        <td>
                            <button class='btn btn btn-outline-primary'>
                                <a class='company-button-anchor' href='{{ path('company_show', {'id': company.id}) }}'>Delete</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan='6'>no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class='d-flex justify-content-between align-items-center'>
            <button class='btn btn-outline-primary'>
                <a class='company-button-anchor' href='{{ path('company_new') }}'>Create new</a>
            </button>
            <div class="navigation m-5">
                {{ knp_pagination_render(companies) }}
            </div>
        </div>
        
    </div>
{% endblock %}
