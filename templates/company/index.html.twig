{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}

    <style>
        .company-button-anchor {text-decoration: none;}
        .btn:hover .company-button-anchor{color: white; }
    </style>
    
    <div class='container'>
        <h1 class='text-center mb-3'>Companies Table</h1>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Sector</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td>{{ company.id }}</td>
                    <td>{{ company.name }}</td>
                    <td>{{ company.phone }}</td>
                    <td>{{ company.email }}</td>
                    <td>{{ company.sector }}</td>
                    <td>
                        <button class='btn btn btn-outline-primary'>
                            <a class='company-button-anchor' href="{{ path('company_edit', {'id': company.id}) }}">Edit</a>
                        </button>
                    </td>
                    <td>
                        {{ include('company/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class='btn btn-outline-primary'>
            <a class='company-button-anchor' href="{{ path('company_new') }}">Create new</a>
        </button>
    </div>
{% endblock %}
