{% extends 'base.html.twig' %}

{% block title %}Company App{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}
    <div class='container'>      
        <ul class="list-group mt-3">
            <h1 class='text-center'>Delete Company</h1>
            <li class="list-group-item text-center active">
                <h1 class='text-center'>{{ company.name }}</h1>
            </li>
            <li class="list-group-item text-center"><b>Id:</b>  {{ company.id }}</li>
            <li class="list-group-item text-center"><b>Phone:</b>  {{ company.phone }}</li>
            <li class="list-group-item text-center"><b>Email:</b>  {{ company.email }}</li>
            <li class="list-group-item text-center"><b>Sector:</b>  {{ company.sector }}</li>
        </ul>

        <div class='d-flex justify-content-between mt-2'>
            {{ include('company/_delete_form.html.twig') }}
            <button class='btn btn btn-outline-primary ml-5'>
                <a class='company-button-anchor' href="{{ path('company_index') }}">Cancel</a>
            </button>
        </div>
    </div>
{% endblock %}
