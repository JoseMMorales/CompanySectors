{% extends 'base.html.twig' %}

{% block title %}Sector{% endblock %}

{% block body %}
    <div class='container'>      
        <ul class="list-group mt-3">
            <h1 class='text-center'>Delete Sector</h1>
            <li class="list-group-item text-center active">
                <h1 class='text-center'>{{ sector.name }}</h1>
            </li>
            <li class="list-group-item text-center"><b>Id:</b>  {{ sector.id }}</li>
            <li class="list-group-item text-center"><b>Sector:</b>  {{ sector.name }}</li>
        </ul>

        <div class='d-flex justify-content-between my-2'>
            {{ include('sector/_delete_form.html.twig') }}
            <button class='btn btn btn-outline-primary ml-5'>
                <a class='company-button-anchor' href="{{ path('sector_index') }}">Cancel</a>
            </button>
        </div>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>    
{% endblock %}
